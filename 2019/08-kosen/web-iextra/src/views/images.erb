<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Image Extractor</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <header>
      <h1>Image Extractor</h1>
    </header>

    <ul>
    <% @images.each do |image| %>
      <li><a href="/image/<%= @name %>/<%= File.basename(image) %>"><%= File.basename(image) %></a></li>
    <% end %>
    </ul>

    <div>
      <a href="/">back</a>
    </div>
  </div>
</body>
</html>
